{
  "name": "elenacomnes.com",
  "version": "1.0.0",
  "description": "A website",
  "main": "src/index.js",
  "scripts": {
    "test": "run-s test:*",
    "test:deps": "dependency-check ./package.json --no-peer --no-dev",
    "test:lint": "standard | snazzy",
    "test:tape": "tape test/* | tap-format-spec",
    "test:build": "run-s build",
    "build": "npm run clean && run-p build:*",
    "build:css": "postcss src/index.css -o build/bundle.css --config postcss.config.js",
    "build:js": "browserify src/index.js --debug | exorcist build/bundle.js.map > build/bundle.js",
    "build:static": "cpx 'src/static/**/*.{html,png,jpg}' build",
    "watch": "npm run clean && run-p watch:*",
    "watch:css": "run-s 'build:css -- --watch'",
    "watch:js": "budo src/index.js:bundle.js --dir build --live --open",
    "watch:static": "npm run build:static -- --watch --verbose",
    "clean": "rimraf build && mkdirp build",
    "start": "npm run watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcomnes/elenacomnes.com.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bcomnes/elenacomnes.com/issues"
  },
  "homepage": "https://github.com/bcomnes/elenacomnes.com#readme",
  "devDependencies": {
    "@tap-format/spec": "^0.2.0",
    "autoprefixer": "^9.7.4",
    "browserify": "^16.5.0",
    "budo": "^11.6.3",
    "cpx2": "^2.0.0",
    "dependency-check": "^4.1.0",
    "exorcist": "^1.0.1",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^7.0.26",
    "postcss-browser-reporter": "^0.6.0",
    "postcss-cli": "^7.1.0",
    "postcss-import": "^12.0.1",
    "postcss-reporter": "^6.0.1",
    "postcss-url": "^8.0.0",
    "rimraf": "^3.0.0",
    "snazzy": "^8.0.0",
    "standard": "^14.3.1",
    "tape": "^4.6.2",
    "mine.css": "^2.0.0"
  }
}
